FROM ubuntu:20.04

WORKDIR /app

RUN mkdir images

RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip

RUN pip install streamlit streamlit_folium plotly pandas folium sqlalchemy psycopg2-binary numpy streamlit_option_menu

COPY dashboard/dashboard.py /app/dashboard.py

COPY dashboard/symbol.png /app/images/symbol.png

CMD [ "streamlit", "run", "dashboard.py" ]